<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/gradient_bck"
    android:layout_height="match_parent"
    android:weightSum="12"
    tools:context=".Home">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:weightSum="5"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="Rock Quality Designation:"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:textColor="#000"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            />

        <Spinner
            android:layout_width="0dp"
            android:layout_weight="2"
            android:id="@+id/rqdspinner"
            android:elevation="7dp"



            android:layout_marginTop="10dp"
            android:layout_height="match_parent"
            />
    </LinearLayout>

      <GridLayout
          android:layout_width="match_parent"
          android:layout_height="0dp"

          android:rowCount="6"
          android:layout_weight="9"
          android:columnCount="1"
          android:columnOrderPreserved="false">
          <androidx.cardview.widget.CardView
              android:layout_height="0dp"
              app:cardCornerRadius="10dp"
              android:padding="5dp"
              android:elevation="7dp"
              android:layout_margin="7dp"

              android:layout_rowWeight="1"
              android:layout_width="match_parent">
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="horizontal"
                  android:paddingLeft="10dp"
                  android:weightSum="10"
                  android:background="@drawable/gradient_card"
                  android:gravity="center"
                  android:layout_gravity="center"
                  >
              <TextView
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="match_parent"
                  android:gravity="center"
                  android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                  android:text="Jn"/>
                  <TextView
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="5"
                      android:paddingBottom="5dp"
                      android:textSize="20dp"
                      android:gravity="center"
                      android:text="Joint Set Number :"/>

                  <Spinner
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                        android:layout_weight="4"
                      android:id="@+id/jnspinner"/>


</LinearLayout>
          </androidx.cardview.widget.CardView>
          <androidx.cardview.widget.CardView
              android:layout_height="0dp"
              app:cardCornerRadius="10dp"
              android:padding="5dp"
              android:elevation="7dp"
              android:layout_margin="7dp"

              android:layout_rowWeight="1"
              android:layout_width="match_parent">
              <LinearLayout
                  android:paddingLeft="10dp"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="horizontal"
                  android:weightSum="10"
                  android:background="@drawable/gradient_card"
                  android:gravity="center"
                  android:layout_gravity="center"
                  >
                  <TextView
                      android:layout_width="0dp"
                      android:layout_weight="1"
                      android:layout_height="match_parent"
                      android:gravity="center"
                      android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                      android:text="Jr"/>
                  <TextView
                      android:layout_width="0dp"
                      android:paddingBottom="5dp"
                      android:layout_height="match_parent"
                      android:layout_weight="5"
                      android:textSize="20dp"
                      android:gravity="center"
                      android:text="Joint Roughness Number :"/>

                  <Spinner
                      android:layout_width="0dp"
                      android:layout_weight="4"
                      android:layout_height="match_parent"
                      android:id="@+id/jrspinner"/>


              </LinearLayout>
          </androidx.cardview.widget.CardView>
          <androidx.cardview.widget.CardView
              android:layout_height="0dp"
              app:cardCornerRadius="10dp"
              android:padding="5dp"
              android:elevation="7dp"

              android:layout_margin="7dp"

              android:layout_rowWeight="1"
              android:layout_width="match_parent">
              <LinearLayout
                  android:paddingLeft="10dp"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="horizontal"
                  android:weightSum="10"
                  android:background="@drawable/gradient_card"
                  android:gravity="center"
                  android:layout_gravity="center"
                  >
                  <TextView
                      android:layout_width="0dp"
                      android:layout_weight="1"
                      android:layout_height="match_parent"
                      android:gravity="center"
                      android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                      android:text="Ja"/>
                  <TextView
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="5"
                      android:paddingBottom="5dp"
                      android:textSize="20dp"
                      android:gravity="center"
                      android:text="Joint Alteration Number :"/>

                  <Spinner
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="4"
                      android:id="@+id/jaspinner"/>


              </LinearLayout>
          </androidx.cardview.widget.CardView>
          <androidx.cardview.widget.CardView
              android:layout_height="0dp"
              app:cardCornerRadius="10dp"
              android:padding="5dp"
              android:elevation="7dp"
              android:layout_margin="7dp"

              android:layout_rowWeight="1"
              android:layout_width="match_parent">
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="horizontal"
                  android:weightSum="10"
                  android:paddingLeft="10dp"
                  android:background="@drawable/gradient_card"
                  android:gravity="center"
                  android:layout_gravity="center"
                  >
                  <TextView
                      android:layout_width="0dp"
                      android:layout_weight="1"
                      android:layout_height="match_parent"
                      android:gravity="center"
                      android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                      android:text="Jw"/>
                  <TextView
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="5"
                      android:textSize="20dp"
                      android:paddingBottom="5dp"
                      android:gravity="center"
                      android:text="Joint water reduction factor:"/>

                  <Spinner
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="4"
                      android:id="@+id/jwspinner"/>


              </LinearLayout>
          </androidx.cardview.widget.CardView>
          <androidx.cardview.widget.CardView
              android:layout_height="0dp"
              app:cardCornerRadius="10dp"
              android:padding="5dp"
              android:elevation="7dp"
              android:layout_margin="7dp"

              android:layout_rowWeight="1"
              android:layout_width="match_parent">
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="horizontal"
                  android:weightSum="10"
                  android:paddingLeft="10dp"
                  android:background="@drawable/gradient_card"
                  android:gravity="center"
                  android:layout_gravity="center"
                  >
                  <TextView
                      android:layout_width="0dp"
                      android:layout_weight="1"
                      android:layout_height="match_parent"
                      android:gravity="center"
                      android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                      android:text="SRF"/>
                  <TextView
                      android:paddingBottom="5dp"
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="4"
                      android:textSize="20dp"
                      android:gravity="center"
                      android:text="Stress Reduction Factor :"/>


                  <Spinner
                      android:layout_width="0dp"
                      android:layout_weight="5"
                      android:layout_height="match_parent"
                      android:id="@+id/srfspinner"/>


              </LinearLayout>
          </androidx.cardview.widget.CardView>
          <androidx.cardview.widget.CardView
              android:layout_height="0dp"
              app:cardCornerRadius="10dp"
              android:padding="5dp"
              android:elevation="7dp"
              android:layout_margin="7dp"

              android:layout_rowWeight="1"
              android:layout_width="match_parent">
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="horizontal"
                  android:weightSum="10"
                  android:paddingLeft="10dp"
                  android:background="@drawable/gradient_card"
                  android:gravity="center"
                  android:layout_gravity="center"
                  >
                  <TextView
                      android:layout_width="0dp"
                      android:layout_weight="1"
                      android:layout_height="match_parent"
                      android:gravity="center"
                      android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                      android:text="ESR"/>
                  <TextView
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="5"
                      android:textSize="20dp"
                      android:paddingBottom="5dp"
                      android:gravity="center"
                      android:text="Excavation Support Ratio:"/>

                  <Spinner
                      android:layout_width="0dp"
                      android:layout_weight="4"
                      android:layout_height="match_parent"
                      android:id="@+id/esrspinner"/>


              </LinearLayout>
          </androidx.cardview.widget.CardView>


      </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_weight="1">
       <LinearLayout
           android:layout_width="0dp"

           android:layout_weight="5"
           android:weightSum="5"
           android:paddingLeft="10dp"
           android:layout_height="match_parent">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="RoofSpan:"
            android:textSize="15dp"
            android:textColor="#000"
            android:layout_marginTop="4dp"
            />

        <Spinner
            android:layout_width="0dp"
            android:layout_weight="3"
            android:id="@+id/roofspanspinner"
            android:elevation="7dp"
            android:layout_marginTop="4dp"
            android:layout_height="match_parent"
            /></LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:background="#000"
            android:layout_marginLeft="20dp"/>
<LinearLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
  android:layout_weight="5"
    android:weightSum="5"
    android:layout_gravity="right"
    android:gravity="right"
    >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Rock"
                android:layout_weight="1.5"

                android:layout_marginTop="4dp"
                android:layout_marginLeft="10dp"
android:textColor="#000"
                android:textSize="15dp"
                />

            <Spinner
                android:layout_width="0dp"
                android:id="@+id/rocktypespinner"
                android:layout_marginLeft="4dp"

                android:layout_weight="3.5"
                android:elevation="7dp"
                android:layout_marginTop="4dp"
                android:layout_height="wrap_content"
                /></LinearLayout>
    </LinearLayout>
    <Button
        android:layout_width="170dp"
        android:layout_height="0dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="10dp"
        android:id="@+id/calcuate"

        android:text="CALCULATE"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:background="@drawable/gradient_button"
        android:layout_weight="1"/>


</LinearLayout>